{% extends 'base.html.twig' %}

{% block title %}Solicitud de Turnos Poder Judicial{% endblock %}

{% block body %}
<br>
<div class="jumbotron mt-1 rounded-lg border border-secondary">
    <div class="row">
        <div class="col-2">
            <img src="{{asset('images/escudo.gif')}}" class="rounded float-left" alt="Poder Judicial" height="140">
        </div>
        <div class="col">
            <h1 class="display-4">{% trans %}Solicitud de Turnos{% endtrans %}</h1>
            <p class="lead text-center">PODER JUDICIAL DE LA PROVINCIA DE SANTA FE</p>
            <hr class="my-4">
            <p>{% trans %}main.parrafo1{% endtrans %}</p>            
            {% if SistemaTurnosWeb %}
                <div class="text-center mt-5 mb-4">
                    <a href="{{asset('docs/informacionAdicional.pdf')}}" target="_blank">Más información sobre el sistema de turnos web para atención de profesionales y público en general</a>
                </div>
            {% endif %}
            <br><br>
            {% if SistemaTurnosWeb or SistemaTurnosMPE %}
                <div class="row">
                    <div class="col-6 text-left">
                        <a class="btn btn-outline-secondary btn-lg float-center" href={% trans %}main.urlAnexa{% endtrans %} role="button">{% trans %}main.labelBtnAnexo{% endtrans %}</a>
                    </div>
                    <div class="col-6 text-right">
                        <a class="btn btn-primary btn-lg float-center" href="{{ path('turno_new2') }}" role="button">Solicitar Turno</a>
                    </div>
                </div>
            {% else %}
                <div class="text-right">
                    <a class="btn btn-primary btn-lg float-center" href="{{ path('turno_new2') }}" role="button">Solicitar Turno</a>
                </div>
            {% endif %}
            
        </div>
    </div>
</div>

{% endblock %}