{% extends 'base.html.twig' %}

{% block title %}Gesti√≥n de Localidades{% endblock %}

{% block body %}
    <h1>Lista de Localidades</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Localidad</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for localidad in localidads %}
            <tr>
                <td>{{ localidad.id }}</td>
                <td>{{ localidad.localidad }}</td>
                <td>
                    &nbsp;&nbsp;
                    <a href="{{ path('localidad_show', {'id': localidad.id}) }}" title="Ver"><i class="fas fa-eye"></i></a>
                    &nbsp;&nbsp;
                    <a href="{{ path('localidad_edit', {'id': localidad.id}) }}" title="Editar"><i class="fas fa-edit"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary float-right" href="{{ path('localidad_new') }}">Crear nueva Localidad</a>
{% endblock %}
