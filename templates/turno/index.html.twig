{% extends 'base.html.twig' %}

{% block title %}Lista de Turnos{% endblock %}

{% block body %}
    <h1>Lista de Turnos</h1>

    <span class="iconify" data-icon="fa-brands:symfony" data-inline="false"></span>
    <form action="{{'turno'}}" method="POST">
        <div class="float-right">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="filter" id="inlineRadio1" value="1" onChange="this.form.submit()" {{ (filtro == 1) ? 'checked' : '' }}>
                <label class="form-check-label" for="optVerOtorgadosHoy">Turnos de Hoy (Asignados)</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="filter" id="inlineRadio2" value="2" onChange="this.form.submit()" {{ (filtro == 2) ? 'checked' : '' }}>
                <label class="form-check-label" for="optVerOtorgados">Turnos Futuros (Asignados)</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="filter" id="inlineRadio3" value="3" onChange="this.form.submit()" {{ (filtro == 3) ? 'checked' : ''}}>
                <label class="form-check-label" for="optVerTodos">Todos</label>
            </div>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                {% if is_granted('ROLE_ADMIN') %}                
                    <th>Oficina</th>
                {% endif %}
                <th>Fecha y Hora</th>
                <th>Persona</th>
                <th>Motivo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% set cant = 0 %}
        {% for turno in turnos %}
            {% set cant = cant +1 %}
            <tr>
                <td>{{ turno.id }}</td>
                {% if is_granted('ROLE_ADMIN') %}
                    <td>{{ turno.oficina }}</td>
                {% endif %}
                <td>{{ turno.fechaHora ? turno.fechaHora|date('d/m/Y H:i') : '' }}</td>
                <td>

                    {{ turno.persona is null or turno.persona == '' ? '' : turno.persona.apellido ~ ', ' ~ turno.persona.nombre}}
                </td>
                <td>{{ turno.motivo }}</td>
                <td>
                    <a href="{{ path('turno_show', {'id': turno.id}) }}" title="Ver"><i class="fas fa-eye"></i></a>
                    &nbsp;&nbsp;
                    <a href="{{ path('turno_edit', {'id': turno.id}) }}" title="Editar"><i class="fas fa-edit"></i></a>
                    &nbsp;&nbsp;
                    {% if turno.persona is not null%}
                        <a href="{{ path('turno_atendido', {'id': turno.id}) }}" title="Marcar como atendido"><i class="fas fa-check"></i></a>
                    {% endif %}
                </td>           
            </tr>
        {% else %}
            <tr>
                <td colspan="4">No hay turnos</td>
            </tr>
        {% endfor %}

        <h6>Cantidad de Turnos: {{ cant }}</h6>
        </tbody>
    </table>

{% endblock %}
