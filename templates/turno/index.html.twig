{% extends 'base.html.twig' %}

{% block title %}Lista de Turnos{% endblock %}

{% block body %}
    <h1>Lista de Turnos</h1>

    <form action="{{'turno'}}" method="GET">
        <div class="float-right">
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="filter" id="inlineRadio1" value="1" onChange="this.form.submit()"     {{ (not filtro) ? '' : 'checked' }}>
                <label class="form-check-label" for="optVerOtorgados">Turnos Otorgados</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="filter" id="inlineRadio2" value="0" onChange="this.form.submit()"     {{ (filtro) ? '' : 'checked' }}>
                <label class="form-check-label" for="optVerTodos">Todos</label>
            </div>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Oficina</th>
                <th>FechaHora</th>
                <th>Persona</th>
                <th>Motivo</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for turno in turnos %}
            <tr>
                <td>{{ turno.id }}</td>
                <td>{{ turno.oficina }} ({{ turno.oficina.localidad }})</td>
                <td>{{ turno.fechaHora ? turno.fechaHora|date('d/m/Y H:i') : '' }}</td>
                <td>

                    {{ turno.persona is null or turno.persona == '' ? '' : turno.persona.apellido ~ ', ' ~ turno.persona.nombre}}
                </td>
                <td>{{ turno.motivo }}</td>
                <td>
                    <a href="{{ path('turno_show', {'id': turno.id}) }}">Ver</a>
                    <a href="{{ path('turno_edit', {'id': turno.id}) }}">Editar</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('turno_new') }}">Crear Nuevo Turno</a>
{% endblock %}
